---
const { stacks } = Astro.props;
---

<div class="grid grid-cols-1 gap-8 md:grid-cols-2">
	{
		stacks.map((stack) => (
			<div>
				<h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">{stack.slug}</h3>
				<div class="space-y-4">
					{stack.labels.map((label, index) => (
						<div>
							<div class="mb-1 flex justify-between">
								<span class="text-sm font-medium text-gray-700 dark:text-gray-300">{label}</span>
								<span class="text-sm font-medium text-gray-700 dark:text-gray-300">
									{stack.data[index]}/10
								</span>
							</div>
							<div class="h-2 w-full rounded-full bg-gray-200 dark:bg-neutral-700">
								<div
									class="h-2 rounded-full bg-primary-600"
									style={`width: ${stack.data[index] * 10}%`}
								/>
							</div>
						</div>
					))}
				</div>
			</div>
		))
	}
</div>
