---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
	src: ImageMetadata;
	alt: string;
	title?: string;
	class?: string;
	loading?: "lazy" | "eager";
	decoding?: "async" | "sync" | "auto";
	sizes?: string;
	widths?: number[];
	format?: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif";
	quality?: number;
}

const {
	src,
	alt,
	title,
	class: className,
	loading = "lazy",
	decoding = "async",
	sizes = "(max-width: 480px) 100vw, (max-width: 768px) 90vw, (max-width: 1024px) 75vw, 60vw",
	widths = [480, 768, 1024, 1200, 1536],
	format = "webp",
	quality = 80,
} = Astro.props;
---

<Image
	src={src}
	alt={alt}
	title={title}
	class={className}
	loading={loading}
	decoding={decoding}
	sizes={sizes}
	widths={widths}
	format={format}
	quality={quality}
/>
