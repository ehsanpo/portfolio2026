---
interface Props {
	title: string;
	subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mb-12 text-center">
	<h2 class="text-3xl font-bold text-gray-900 dark:text-white">{title}</h2>
	{subtitle && <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">{subtitle}</p>}
</div>
